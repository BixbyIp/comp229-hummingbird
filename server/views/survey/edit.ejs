<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit page-->
<section id="editSurvey">
    <div class="container" data-aos="fade-up">
      <div class="section-title">
        <h2><%= title %></h2>
      </div>
    <div class="row">
      <div class="col-md-offset-3 col-md-12">
          <form class = "form" method="POST">
            <div class = "form-group">
              <label for="titleTextField">Title</label>
              <input type="text" class = "form-control" id="titleTextField" 
                placeholder="Enter Survey Title"
                name="title" value="<%= survey.title %>" required>
            </div>
            <br>
            <div class = "form-group">
              <label for="startdateTextField">Start Date</label>
              <input type="date" class = "form-control" id="startdateTextField" 
                placeholder="Survey Start Date"
                name="startdate" value="<%= survey.start_date.toISOString().slice(0, 10) %>" required>
            </div>
            <br>
            <div class = "form-group">
              <label for="enddateTextField">End Date</label>
              <input type="date" class = "form-control" id="endateTextField" 
                placeholder="Survey End Date"
                name="enddate" value="<%= survey.end_date.toISOString().slice(0, 10) %>" required>
            </div>
            <br>
            <div class = "form-group">
              <label for="descriptionTextField">Description</label>
              <input type="text" class = "form-control" id="descriptionTextField" 
                placeholder="Description"
                name="description" value="<%= survey.description %>" required>
            </div>
            <br>
            <button class = "btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit 
            </button>
    
            <a href="/survey" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
        
          </form>
      </div>
    </div>
    </div>
  </section>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
